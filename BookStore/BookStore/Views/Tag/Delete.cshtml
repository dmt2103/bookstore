@model BookStore.Contract.ResponseModels.TagResponseModel

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="text-center">
    <h1 class="display-4">Delete Tag</h1>
</div>

<h3>Are you sure you want to delete this tag?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Tag Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TagName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TagId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>