@model BookStore.Contract.ResponseModels.TagResponseModel

@{
    ViewData["Title"] = "Create New Tag";
}

<div class="text-center">
    <h1 class="display-4">Create New Tag</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagName" class="control-label">Tag Name</label>
                <input asp-for="TagName" class="form-control" required="" />
                <span asp-validation-for="TagName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>